<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pageViewerFragment">

    <fragment
        android:id="@+id/pageViewerFragment"
        android:name="com.example.expensesmanager.ui.page_viewer.PageViewerFragment"
        android:label="fragment_page_viewer"
        tools:layout="@layout/fragment_page_viewer" >
        <action
            android:id="@+id/action_pageViewerFragment_to_addNewRecordFragment"
            app:destination="@id/addNewRecordFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewRecordFragment"
        android:name="com.example.expensesmanager.ui.add_new_record.AddNewRecordFragment"
        android:label="fragment_add_new_record"
        tools:layout="@layout/fragment_add_new_record" >
        <action
            android:id="@+id/action_addNewRecordFragment_to_pageViewerFragment"
            app:destination="@id/pageViewerFragment" />
    </fragment>
</navigation>